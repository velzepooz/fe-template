{
  "name": "template",
  "version": "1.0.0",
  "description": "Boilerplate for FE projects",
  "main": "./src/index.html",
  "scripts": {
    "start": "parcel ./src/index.html --open",
    "build": "rm -rf ./dist && parcel build ./src/index.html --public-url ./",
    "lint:js": "eslint ./src",
    "lint:css": "stylelint ./src",
    "lint:html": "linthtml ./src",
    "lint": "concurrently \"npm run lint:js\" \"npm run lint:css\" \"npm run lint:html\"",
    "predeploy": "npm run build",
    "deploy": "./deploy.sh",
    "test": "jest ./src"
  },
  "keywords": [
    "boilerplate",
    "template",
    "frontend"
  ],
  "author": "velzepooz",
  "license": "ISC",
  "devDependencies": {
    "@linthtml/linthtml": "^0.4.1",
    "@mate-academy/eslint-config": "0.0.12",
    "@mate-academy/linthtml-config": "0.0.1",
    "@mate-academy/stylelint-config": "0.0.9",
    "concurrently": "^5.2.0",
    "eslint": "^7.3.0",
    "eslint-plugin-jest": "^23.16.0",
    "eslint-plugin-node": "^11.1.0",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "node-sass": "^4.14.1",
    "parcel": "^1.12.4",
    "stylelint": "^13.6.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "pre-push": "npm test"
    }
  }
}
